<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="org.aqins.agrodesk.SetupActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/setupNameField"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/setupImageBtn"
        android:layout_alignParentStart="true"
        android:hint="Choisissez-vous un pseudonyme ..." />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/user_bi_color"
        android:id="@+id/setupImageBtn"
        android:cropToPadding="false"
        android:background="#00ffffff"
        android:scaleType="centerCrop"
        android:layout_marginStart="104dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:text="Mettre Ã  jour profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setupSubmitBtn"
        android:layout_marginTop="220dp"
        android:layout_below="@+id/setupNameField"
        android:layout_alignParentStart="true" />
</RelativeLayout>
